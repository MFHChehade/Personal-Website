---
interface Props {
  date: string;
  content: string;
  link?: string;
}

const { date, content, link } = Astro.props;
---

<div class="news-item">
  <strong>{date}:</strong>
  {link ? (
    <>
      {preText}
      <a href={link} target="_blank" rel="noopener noreferrer">Paper</a>
      {postText}
    </>
  ) : (
    <span>{content}</span>
  )}
</div>

<style>
  .news-item {
    margin-bottom: 1rem;
    padding: 0.5rem;
    border-left: 3px solid var(--primary);
    background: var(--secondary-bg);
  }
  .news-item a {
    color: var(--primary);
    text-decoration: none;
  }
  .news-item a:hover {
    text-decoration: underline;
  }
</style>

---
const socialLinks = [
  { icon: "fab fa-linkedin", url: "https://lb.linkedin.com/in/mfhchehade", label: "LinkedIn" },
  { icon: "fas fa-user-graduate", url: "https://scholar.google.com/citations?user=cVUnhukAAAAJ&hl=en", label: "Google Scholar" },
  { icon: "fab fa-github", url: "https://github.com/mfhchehade", label: "GitHub" },
  { icon: '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="20px" height="20px"><path d="M23.7 0H17L12 9 7 0H0l9.8 17L0 24h6.7L12 15l5.3 9H24l-9.8-7L23.7 0Z" /></svg>', url: "https://twitter.com/MFHChehade", label: "Twitter" },
  { icon: "fas fa-envelope", url: "mailto:chehade@utexas.edu", label: "Email" },
  { icon: "fas fa-phone", url: "tel:7373400862", label: "Phone" },
  { icon: "fa-brands fa-x-twitter", url: "tel:7373400862", label: "Phone" }
];
---

<div class="social-links">
  {socialLinks.map(link => (
    <a href={link.url} target="_blank" rel="noopener noreferrer" aria-label={link.label}>
      <i class={link.icon}></i>
    </a>
  ))}
</div>

<style>
  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin: 1rem 0;
  }
  .social-links a {
    color: var(--text);
    font-size: 1.5rem;
    transition: color 0.3s ease;
  }
  .social-links a:hover {
    color: var(--primary);
  }
</style>
